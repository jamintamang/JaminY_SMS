@model JaminY_SMS.Models.Course
<div class="container mt-5">
    @{
        ViewData["Title"] = Model.Id > 0 ? "Update Course Info" : "Add Course Info";
    }
    <h1 class="mb-4 text-center"><b>@(Model.Id > 0 ? "Edit" : "Create") Course Information</b></h1>

    <form method="post" asp-action="AddEdit" enctype="multipart/form-data" class="needs-validation" novalidate>
        <input asp-for="Id" hidden />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label">Course Name</label>
                    <input asp-for="CourseName" class="form-control" placeholder="Enter course name" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Enter course description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>

                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-outline-primary w-100">@((Model.Id > 0) ? "Update" : "Create")</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Courses" class="btn btn-outline-secondary w-100"><i class="fa-solid fa-backward-step"></i>Back</a>
                    </div>
                </div>
            </div>
        </div>q
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
