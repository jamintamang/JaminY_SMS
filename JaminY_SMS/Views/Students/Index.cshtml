@model IEnumerable<JaminY_SMS.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<div class="col-12">

    <a class="btn btn-outline-primary float-end" asp-action="AddEdit">Add Student</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Student Information</h2>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <div class="col-3">
            <form method="get" asp-action="Index">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control rounded-pill me-sm-2"
                           placeholder="Search" value="@ViewData["CurrentFilter"]" />
                    <button class="btn btn-outline-primary rounded-pill my-2 my-sm-0" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="table-success">
                        <th>@Html.DisplayNameFor(model => model.CourseId)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Gender)</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th>@Html.DisplayNameFor(model => model.Class)</th>
                        <th>@Html.DisplayNameFor(model => model.Section)</th>
                        <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-light">
                            <td>@item.Course.CourseName</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Gender</td>
                            <td>@item.Address</td>
                            <td>@item.Class</td>
                            <td>@item.Section</td>
                            <td>@item.IsActive</td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-action="AddEdit" asp-route-id="@item.Id">
                                    @* <i class="fa-regular fa-pen-to-square"></i> *@ Edit
                                </a>
                                <a class="btn btn-outline-danger btn-sm"
                                   asp-action="Delete"
                                   onclick="return confirm('Are you sure you want to delete this student?')"
                                   asp-route-id="@item.Id">
                                    @* <i class="fa-solid fa-user-slash"></i> *@ Delete
                                </a>
                                <a class="btn btn-outline-info btn-sm"
                                   asp-action="Details" asp-route-id="@item.Id">
                                    Details@*  <i class="fa-solid fa-circle-info"></i> *@
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

